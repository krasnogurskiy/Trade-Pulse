@model IEnumerable<DAL.Tools.Product>

@{
	ViewData["Title"] = "Products";
}

<section class="jumbotron text-center">
	<div class="container">
		<h1 class="jumbotron-heading">@ViewBag.CategoryName</h1>
	</div>
</section>

<div class="album py-5 bg-light">
	<div class="container">
		<div class="row">
			@foreach (var item in Model)
			{
				<div class="col-md-4">
					<div class="card mb-4 box-shadow">
						@* <img class="card-img-top" src="~/img/@item.ImageFileName" alt=@item.Title> *@
						<div class="card-body">
							<p class="card-text">@item.Title</p>
							<div class="d-flex justify-content-between align-items-center">
								<div class="btn-group">
									<button type="button" class="btn btn-sm btn-outline-secondary">Переглянути</button>
								</div>
							</div>
						</div>
					</div>
				</div>
			}
            
		</div>
	</div>
</div>
