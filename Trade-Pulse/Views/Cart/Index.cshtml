@model List<BLL.DTOs.CartListItemDto>

@{
    ViewData["Title"] = "Cart";
}

<h1>Корзина</h1>

@if (Model.Count == 0)
{
    <p>Ваша корзина порожня</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Товар</th>
                <th>Ціна</th>
                <th>Кількість</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductTitle</td>
                    <td>@item.Price / шт.</td>
                    <td>@item.ItemsCount</td>
                    <td>
                        <div class="row">
                            <div class="col-6">
                                <form asp-action="RemoveFromCart" asp-controller="Cart">
                                    <input type="hidden" name="id" value="@item.ProductId" />
                                    <button type="submit" class="btn btn-danger">Видалити з корзини</button>
                                </form>
                            </div>
                            <div class="col-6">
                                <form asp-action="Create" asp-controller="Order" method="post">
                                    <input type="hidden" name="Price" value="@item.Price" />
                                    <input type="hidden" name="ProductId" value="@item.ProductId" />
                                    <input type="hidden" name="ItemsCount" value="@item.ItemsCount " />
                                    <button type="submit" class="btn btn-success">Замовити</button>
                                </form>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}